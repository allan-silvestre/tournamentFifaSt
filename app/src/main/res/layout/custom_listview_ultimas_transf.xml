<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data">

        <ImageView
            android:id="@+id/imgJ"
            android:layout_width="110dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/jogador101" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IBRA"
                android:textColor="#FFFDFD"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ATA"
                android:textColor="#FFFDFD"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/oJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="99"
                android:textColor="#FFA000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data">

        <LinearLayout
            android:id="@+id/linearLayout16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAntC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/arsenal" />

            <TextView
                android:id="@+id/nomeAntC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFDFD"
                android:textSize="8sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/seta"
            android:layout_width="35dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/seta" />

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgNovoC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/atalanta" />

            <TextView
                android:id="@+id/nomeNovoC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFDFD"
                android:textSize="8sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>