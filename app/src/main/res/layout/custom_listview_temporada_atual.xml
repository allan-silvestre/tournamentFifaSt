<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/imgOuro"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgPrata"
        app:layout_constraintStart_toEndOf="@+id/linearLayout33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502"
        app:srcCompat="@drawable/ouro" />

    <ImageView
        android:id="@+id/imgPrata"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgBronze"
        app:layout_constraintStart_toEndOf="@+id/imgOuro"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/prata" />

    <ImageView
        android:id="@+id/imgBronze"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ptsId"
        app:layout_constraintStart_toEndOf="@+id/imgPrata"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bronze" />

    <TextView
        android:id="@+id/prataId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgBronze"
        app:layout_constraintStart_toEndOf="@+id/imgOuro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503" />

    <TextView
        android:id="@+id/bronzeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ptsId"
        app:layout_constraintStart_toEndOf="@+id/imgPrata"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulosId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgPrata"
        app:layout_constraintStart_toEndOf="@+id/linearLayout33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503" />

    <TextView
        android:id="@+id/ptsId"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="PTS"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBronze"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="63dp" />

    <LinearLayout
        android:id="@+id/linearLayout33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="345dp">

        <TextView
            android:id="@+id/classificacao"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#FF0000"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgPlayer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/escudoTime"

            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Player"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>